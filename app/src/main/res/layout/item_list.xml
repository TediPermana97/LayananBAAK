<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/lyCard"
        app:cardElevation="1dp"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWindowBackgroundWhite">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView1"
                    android:background="@drawable/circle"
                    android:src="@drawable/family_avatar"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="1.0dip"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_marginLeft="8dp"
                    android:paddingTop="@dimen/list_vertical_margin"
                    android:paddingBottom="@dimen/list_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Tanggal"
                        android:id="@+id/tv3"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12dp"
                        android:textColor="@color/colorTextThird"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                    <TextView
                        android:text="Nama Lengkap"
                        android:textSize="16dp"
                        android:textColor="@color/colorTextThird"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/tv1"
                        android:layout_marginBottom="4.0dip"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />
                    <TextView
                        android:text="NPM"
                        android:id="@+id/tv2"
                        android:layout_below="@+id/tv1"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/colorTextThird"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                </LinearLayout>

                <View
                    android:id="@+id/borderLeft"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorTextThird"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"/>

            </RelativeLayout>
            <LinearLayout
                android:background="@color/colorTextThird2"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/action_syarat"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_baseline_plagiarism_24"
                    android:tint="#4CAF50"
                    android:adjustViewBounds="true" />

                <ImageButton
                    android:id="@+id/action_del"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_baseline_delete_forever_24"
                    android:tint="#F44336"
                    android:adjustViewBounds="true" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>